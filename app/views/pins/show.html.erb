<div class="row">
	<div class="span6 offset3">
		<div class="well">
			<%= image_tag @pin.image %>
			<p>
			  <%= @pin.description %>
			</p>
			<p>
				<small>
				  Posted by <%= link_to @pin.user.name, profile_path(@pin.user.id) %>
				</small>
			</p>
			<% if current_user == @pin.user %>
				<%= link_to 'Edit', edit_pin_path(@pin) %> |
			<% end %>
			<%= link_to 'Back', pins_path %>
			<h3>Comments</h3>
			<%= render @pin.comments %>
			<%= render :partial => "comments/form" %>

		</div>
	</div>
</div>
