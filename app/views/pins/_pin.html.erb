<div class="box">
	<%= link_to (image_tag pin.image(:medium)), pin %>
	<p class="description">
		<%= pin.description %></td>
	</p>
	<p>
		<strong>
			Posted by <%= pin.user.name %>
			Posted by <%= link_to pin.user.name, profile_path(pin.user.id) %>
		</strong>
	</p>
	<div>
		<% if current_user == pin.user %>
			<%= link_to 'Edit', edit_pin_path(pin) %>
			<%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
		<% end %>
		<% if pin.comments.count >= 1 %>
				<%= link_to('', pin_path(pin.id), :class => "icon-comment pull-right") %>
		<% end %>
	</div>	
</div>
